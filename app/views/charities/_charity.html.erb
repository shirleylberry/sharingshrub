<h2><%= charity.name %></h2>
<div class = "causes">
  <h4>Causes</h4>
  <ul>
  <% charity.causes.each do |cause| %>
    <li><%= cause.name %></li>
  <% end %>
  </ul>
</div>
<p class = "mission"><%= charity.mission %></p>
<h4>Information</h4>
<% if charity.website %>
  <h5>Website</h5>
  <div class = "website">
    <a href = <%= charity.website %>>Visit this charity's website</a>
  </div>
<% end %>

<% if charity.address %>
  <h5>Address</h5>
  <div class = "address"><%= charity.address %></div>
  <div class="map-container">
      <div id="map" style="width: 100%; height: 400px"></div>
  </div>
<% end %>

<% if charity.upcoming_events%>
  <div class = "upcoming-events">
    <ul>
      <% charity.upcoming_events.each do |event| %>
        <%= link_to event do %>
          <li><%= event.title %></li>
        <% end %>
        <%= event.event_start.to_date %>
        <%= event.event_end.to_date %>
      <% end %>
    </ul>
  </div>
<% end %>

<% if current_user && current_user.admin %>
  <div class = "admin">
    <%= charity.pledges_lost %>
  </div>
<% end %>