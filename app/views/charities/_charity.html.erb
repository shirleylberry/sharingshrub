
<h2><%= charity.name %></h2>
<div class = "causes">
  <h4>Causes</h4>
  <% charity.causes.each do |cause| %>
    <%= cause.name %>
  <% end %>
</div>
<h4>Information</h4>
<% if charity.website %>
  <h5>Website</h5>
  <div class = "website">
    <a href = <%= charity.website %>>Visit this charity's website</a>
  </div>
<% end %>

<% if charity.address %>
  <h5>Address</h5>
  <div class = "address"><%= charity.address %></div>
  <div class="map-container">
      <div id="map" style="width: 100%; height: 400px"></div>
  </div>
<% end %>