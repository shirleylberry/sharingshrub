
<div class="col-sm-4 col-sm-offset-4">  
  <h2 class="text-center">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class:"form-horizontal center" }) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %> <br>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %> <br>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %> <br><br>
      </div>
    <% end -%>
    <div class="actions">
      <%= f.submit "Log in" %> <br><br>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>