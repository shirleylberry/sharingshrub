<%= form_for event do |f| %>
  <%= f.label :event_title %>
  <%= f.text_field :title %>
  <%= f.label :charity %>
  <p>Select up to three charities</p>
  <%= f.collection_check_boxes :charities, Charity.all, :id, :name %>
  <p><%= f.label :goal %>
  <%= f.number_field :goal, placeholder: "$10,000" %></p>

  <p><%= label_tag :event_start, "Start Date" %>
  <%= f.event_start_date_part :event_start %>
  <%= label_tag :event_start, "Start Time" %>
  <%= f.event_start_time_part :event_start, :ignore_date => true %></p>
  <p><%= label_tag :event_end, "End Date" %>
  <%= f.event_end_time_part :event_end %>
  <%= label_tag :event_end, "End Time" %>
  <%= f.event_end_time_part :event_end, :ignore_date => true %></p>

  <%= f.submit "Create new Event" %>
<% end %>


 